<div class="tweet">
  <div class="tweet-left">
    <% if idea.user.image.present?%>
      <%= image_tag idea.user.image ,class:"user-icon" %>
    <% else %>
      <%= image_tag "icon_noimage" ,class:"user-icon"%>
    <% end %>
  </div>
  <div class="tweet-center">
    <div class="tweet-head">
      <div class="user-nickname"><%= idea.user.nickname%></div>
      <div class="created-date"><%= idea.created_at.strftime('%Y/%m/%d')%></div>
    </div>
    <div class="tweet-body">
        <p class="tweet-title"><span style="font-weight:bold;">タイトル：</span><%= idea.title%></p>
        <p class="tweet-idea"><span style="font-weight:bold;">アイデア：</span><%= idea.idea%></p>
        <p class="tweet-other"><span style="font-weight:bold;">その他：</span><%= idea.other%></p>
    </div>
    <div class="post-foot">
      <div class="price">¥<%= idea.price%></div>
      <div class="category"><%= idea.category.name%></div>
    </div>
  </div>
  <div class="tweet-right">
    <div class='idea-img-content'>
      <% if idea.image.present?%>
          <%= image_tag idea.image ,class:"tweet-img" %>
      <% else %>
        <%= image_tag "idea_noimage" ,class:"tweet-img" %>
      <% end %>
    </div>
  </div>
</div>