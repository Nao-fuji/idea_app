<%= render "shared/header"%>
<% breadcrumb :idea_purchase, @idea %>
<%= breadcrumbs separator: " &rsaquo; " %>

<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      購入内容の確認
    </h1>
    <%# /購入内容の表示 %> 
    <div class='buy-idea-info'>
      <div class='buy-idea-right-content'>
        <h2 class='buy-idea-text'>
          <%= @idea.title %>
        </h2>
      </div>
    </div>
    <%# /購入内容の表示 %> 

    <%# 支払額の表示 %>
    <div class='idea-payment'>
      <p class="idea-payment-price"><span style="font-weight:bold;">支払い金額：</span>¥<%= @idea.price%></p>
    </div>
    <%# /支払額の表示 %>

    <%= form_with model:[@idea, @idea_purchase] , url:idea_idea_purchases_path,id: 'chargea-form', class: 'transaction-form-wrap',local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# カード情報の入力 %>
    <div class='credit-card-form'>
      <h1 class='info-input-haedline'>
        クレジットカード情報入力
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :number, class:"input-default", id:"carda-number", placeholder:"カード番号(半角英数字)", maxlength:"16", name:"idea_purchase[number]" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <%= f.text_area :exp_month, class:"input-expiration-date", id:"carda-exp-month", placeholder:"例)3", name:"idea_purchase[exp_month]" %>
          <p>月</p>
          <%= f.text_area :exp_year, class:"input-expiration-date", id:"carda-exp-year", placeholder:"例)23", name:"idea_purchase[exp_year]" %>
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :cvc,class:"input-default", id:"carda-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4", name:"idea_purchase[cvc]" %>
      </div>
    </div>
    <%# /カード情報の入力 %>
    
    <%# /配送先の入力 %>
    <div class='buy-btn'>
      <%= f.submit "購入" ,class:"recruit-orange-btn2" %>
    </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer"%>