<%= render "shared/header"%>
<% breadcrumb :new_idea %>
<%= breadcrumbs separator: " &rsaquo; " %>

<div class="ideas-sell-contents">
  <header class="ideas-sell-header">
    <%# <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
  </header>

  <div class="ideas-sell-main">
    <h2 class="ideas-sell-title">アイデアの情報を入力</h2>
    <%= form_with model:@idea , url:ideas_path ,local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# アイデア名とアイデア内容、画像 %>
    <div class="new-ideas">
      <div class="weight-bold-text">
        アイデア名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"idea-title", id:"idea-title", placeholder:"アイデア名（8文字まで)", maxlength:"8" %>
      <div class="weight-bold-text">
        アイデアの内容
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :idea, class:"ideas", id:"idea", placeholder:"アイデアの内容   （例）〜してくれるアプリ" %>
      <div class="img-upload">
        <div class="left-img-upload">
          <div class="weight-bold-text">
            関連画像(関連する画像があれば添付してください)
          </div>
          <div class="click-upload">
            <p>
              クリックしてファイルをアップロード
            </p>
            <%= f.file_field :image, id:"idea-image" %>
          </div>
        </div>
        <div class="right-img-upload">
          <div id="image-list"></div>
        </div>
      </div>
      <div class="ideas-explain">
        <div class="weight-bold-text">
          その他
        </div>
        <%= f.text_area :other, class:"idea-other", id:"idea-other", placeholder:"そのほかに何かあれば記入してください" %>
      </div>
    </div>

    <div class="ideas-detail">
      <div class="weight-bold-text">
        カテゴリー
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"idea-category"}) %>
    </div>

    <div class="sell-price">
      <div class="weight-bold-text">
        <span>販売価格<span class="indispensable">必須</span><br>(¥50〜500)</span>
      </div>
      <div class="price-contents">
        <span class="sell-yen">¥</span>
        <%= f.text_field :price, class:"price-input", id:"idea-price", placeholder:"例）100" %>
      </div>
    </div>
  <%# アイデア名とアイデア内容、画像 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
  </footer>
</div>

<%= render "shared/footer" %>