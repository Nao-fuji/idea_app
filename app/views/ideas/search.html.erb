<%= render "shared/header"%>
<% breadcrumb :search_idea %>
<%= breadcrumbs separator: " &rsaquo; " %>

<div class="main-content">
  <%# アイデア投稿 %>
  <div class="idea-contents">
    <h2 class="h">アイデア検索結果</h2>
    <div class="post-area">
      <% @ideas.each do |idea|%>
        <% if idea.idea_purchase.blank?%>
        <div class="post">
          <div class="post-left">
            <% if idea.user.image.present?%>
              <%= image_tag idea.user.image ,class:"user-icon" %>
            <% else %>
              <%= image_tag "icon_noimage" ,class:"user-icon"%>
            <% end %>
          </div>
          <div class="post-right">
            <div class="post-head">
              <div><%= link_to "#{idea.user.nickname}", "#{user_path(idea.user_id)}", class:"user-nickname"%></div>
              <div class="created-date"><%= idea.created_at.strftime('%Y/%m/%d')%></div>
            </div>
            <div class="post-body">
              <div><%= link_to "#{idea.title}","#{idea_path(idea.id)}",class:"idea"%></div>
            </div>
            <div class="post-foot">
              <div class="price">¥<%= idea.price%></div>
              <div class="category"><%= idea.category.name%></div>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <%# アイデア投稿 %>

  <%# アイデア募集 %>
  <div class="idea-contents">
    <h2 class="h">募集検索結果</h2>
    <div class="post-area">
      <% @recruits.each do |recruit|%>
        <div class="recruit-post">
          <div class="post-left">
            <% if recruit.user.image.present?%>
              <%= image_tag recruit.user.image ,class:"user-icon" %>
            <% else %>
              <%= image_tag "icon_noimage" ,class:"user-icon"%>
            <% end %>
          </div>
          <div class="post-right">
            <div class="post-head">
              <div><%= link_to "#{recruit.user.nickname}", "#{user_path(recruit.user_id)}", class:"user-nickname"%></div>
              <div class="created-date"><%= recruit.created_at.strftime('%Y/%m/%d')%></div>
            </div>
            <div class="recruit-body">
              <div><%= link_to "#{recruit.theme}","#{recruit_path(recruit.id)}",class:"recruit"%></div>
            </div>
            <div class="post-foot">
              <div class="price-content">
                <div class="price-range">買取価格の範囲</div>
                <div class="price">¥<%= recruit.price%></div>
              </div>
              <div class="category"><%= recruit.category.name%></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%# アイデア募集 %>
    <div class="idea-content-foot">
      <a href="/" class="a">トップページに戻る</a>
  </div>
</div>

<%= render "shared/footer"%>